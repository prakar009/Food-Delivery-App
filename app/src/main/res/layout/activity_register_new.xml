<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redd"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/f1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_user_name_input"
        android:background="@drawable/input_design"
        android:layout_below="@+id/app_logo"
        android:padding="20dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_phone_number_input"
        android:background="@drawable/input_design"
        android:layout_below="@+id/register_user_name_input"
        android:padding="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="6dp"
        android:hint="phone number"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_password_input"
        android:background="@drawable/input_design"
        android:layout_below="@+id/register_phone_number_input"
        android:padding="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="6dp"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        />



    <com.rey.material.widget.Button
        android:id="@+id/sign_up"
        android:layout_below="@id/register_password_input"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="SignUp"
        android:textColor="@android:color/white"

        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_admin_panel_link"
        android:text="I not am an admin"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_below="@id/login_now_btn"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="@color/lavender"
        android:layout_marginTop="6dp"


        />




</RelativeLayout>