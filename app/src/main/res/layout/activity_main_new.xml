<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redd"
    tools:context=".MainActivityNew">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/f1" />

    <TextView
        android:id="@+id/app_slogon"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="83dp"
        android:text="Find,Discover,Choose and Buy Online"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <com.rey.material.widget.Button
        android:id="@+id/main_login_now_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Already have an account? Log in"
        android:textColor="@android:color/white"

        />

    <com.rey.material.widget.Button
        android:id="@+id/main_join_now_btn"
      android:layout_above="@+id/main_login_now_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Join Now"
        android:textColor="@android:color/white"

        />




</RelativeLayout>